[flake8]
# Maksymalna długość linii – PEP8 rekomenduje 79, ale możemy być restrykcyjni
max-line-length = 79

# Maksymalna długość całego pliku źródłowego (opcjonalnie)
max-file-length = 2000

# Wymuszaj użycie spacji zamiast tabulatorów
indent-size = 4

# Włączanie wszystkich ostrzeżeń i błędów Flake8
select = E,F,W,C,I,B,B950

# Ignorowane błędy (minimalne)
# E203: whitespace przed ':', często konflikty z black
# W503: line break before binary operator, PEP8 akceptuje różnie
ignore = E203, W503

# Opcjonalne: zakaz używania print w kodzie produkcyjnym
# Uwaga: wymaga wtyczki flake8-builtins lub custom plugin
per-file-ignores =
    __init__.py: F401  # dopuszcza nieużywane importy w __init__.py

# Włącz flake8-bugbear (Bxxx) – wykrywa potencjalne błędy
# Włącz flake8-comprehensions (Cxxx) – sprawdza list comprehensions i wydajność
# Włącz flake8-annotations (Ixxx) – wymaga typowania funkcji
enable-extensions = B,C,I

# Wymaganie typów w funkcjach i metodach
# Jeśli używasz flake8-annotations, dodaj:
# [flake8-annotations]
# require-annotations = True

# Włączanie ostrzeżeń o liniach powyżej limitu (B950)
max-complexity = 10  # opcjonalnie, cyclomatic complexity

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    htmlcov,
    .coverage,
    coverage.xml

