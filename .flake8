[flake8]
# Maksymalna długość linii
max-line-length = 79

# Maksymalna długość całego pliku
max-file-length = 2000

# Wymuszaj spacje zamiast tabulatorów
indent-size = 4

# Włączanie wszystkich ostrzeżeń i błędów Flake8
select = E,F,W,C,I,B,B950

# Ignorowane błędy (minimalne)
ignore = E203, W503

# Opcjonalne ustawienia dla plików __init__.py
per-file-ignores =
    __init__.py: F401

# Włączanie rozszerzeń (BugBear, Comprehensions, Annotations)
enable-extensions = B,C,I

# Maksymalna złożoność cyklomatyczna
max-complexity = 10

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    htmlcov,
    .coverage,
    coverage.xml

